<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_order"
    android:layout_marginTop="@dimen/pad_8"
    android:background="@drawable/rect_white_r2">

    <TextView
        android:id="@+id/txt"
        style="@style/st_18_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/pad_24"
        android:text="@string/order" />

    <TextView
        android:id="@+id/orderId"
        style="@style/st_18_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txt" />

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="@dimen/pad_24"
        android:textSize="11sp"
        android:textColor="@color/blue"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.09" />

    <ImageView
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/pad_14"
        android:src="@drawable/arrow_down" />

</RelativeLayout>
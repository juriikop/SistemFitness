<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pad_50">

    <TextView
        android:id="@+id/name"
        style="@style/st_16_text_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pad_24" />

    <View
        android:id="@+id/chack"
        android:layout_width="@dimen/pad_24"
        android:layout_height="@dimen/pad_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/pad_24"
        android:background="@drawable/check_passive" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_1"
        android:layout_marginLeft="@dimen/pad_24"
        android:layout_marginRight="@dimen/pad_24"
        android:background="@color/gray"/>
</RelativeLayout>
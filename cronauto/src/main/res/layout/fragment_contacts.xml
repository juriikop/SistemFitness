<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tool_bar"
        android:background="@color/primary"
        android:elevation="@dimen/pad_6">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/h_tool_bar"
            android:layout_height="@dimen/h_tool_bar"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"/>
        </LinearLayout>

        <TextView
            style="@style/st_20_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/pad_72"
            android:text="@string/contacts" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/pad_8"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/pad_24"
                android:layout_height="@dimen/pad_24"
                android:layout_marginLeft="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_12"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/OFFICE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_32"
                android:layout_gravity="center_vertical"
                style="@style/st_16_black"
                android:text="@string/of_adr"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/pad_24"
                android:layout_height="@dimen/pad_24"
                android:layout_marginBottom="@dimen/pad_12"
                android:layout_marginLeft="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_12"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/PHONE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_8"
                android:layout_marginLeft="@dimen/pad_32"
                android:lineSpacingExtra="@dimen/pad_12"
                style="@style/st_16_black"
                android:text="@string/of_phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_16"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/pad_24"
                android:layout_height="@dimen/pad_24"
                android:layout_marginLeft="@dimen/pad_16"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/MAIL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_32"
                android:layout_gravity="center_vertical"
                style="@style/st_16_black"
                android:text="@string/of_mail"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
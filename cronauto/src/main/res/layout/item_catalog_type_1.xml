<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fond">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_50"
        android:layout_marginTop="@dimen/pad_block_lr"
        android:background="@color/white">

        <TextView
            android:id="@+id/catalog_name"
            style="@style/st_18_text_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pad_24"
            android:layout_toLeftOf="@+id/expand"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pad_14"
            android:src="@drawable/arrow_down" />
    </RelativeLayout>

</LinearLayout>
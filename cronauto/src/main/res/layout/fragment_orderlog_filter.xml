<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tool_bar"
        android:background="@color/primary">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/h_tool_bar"
            android:layout_height="@dimen/h_tool_bar"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close" />
        </LinearLayout>

        <TextView
            style="@style/st_20_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/pad_72"
            android:text="@string/filter" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool"
        android:layout_marginTop="@dimen/pad_8"
        android:layout_marginLeft="@dimen/pad_8"
        android:layout_marginRight="@dimen/pad_8"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_12"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/from_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/pad_24"
                android:layout_marginRight="@dimen/pad_15"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/st_14_black_70"
                    android:text="@string/from"/>
                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_8"
                    style="@style/st_16_black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_1"
                    android:layout_marginTop="@dimen/pad_4"
                    android:background="@color/black_10"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/before_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/pad_15"
                android:layout_marginRight="@dimen/pad_24"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/st_14_black_70"
                    android:text="@string/before"/>
                <TextView
                    android:id="@+id/before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_8"
                    style="@style/st_16_black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_1"
                    android:layout_marginTop="@dimen/pad_4"
                    android:background="@color/black_10"/>
            </LinearLayout>
        </LinearLayout>

        <fitness.sistem.compon.custom_components.DateDiapason
            android:id="@+id/diapason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:viewFrom="@+id/from"
            app:viewBefore="@+id/before"
            app:countMonthLeft="11"
            android:visibility="gone"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/st_18_black"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_marginTop="@dimen/pad_28"-->
            <!--android:layout_marginLeft="@dimen/pad_24"-->
            <!--android:text="@string/select_status"/>-->

    </LinearLayout>

    <TextView
        android:id="@+id/done"
        style="@style/st_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pad_8"
        android:layout_marginLeft="@dimen/pad_8"
        android:layout_marginRight="@dimen/pad_8"
        android:letterSpacing="0.14"
        android:text="@string/apply" />
</RelativeLayout>
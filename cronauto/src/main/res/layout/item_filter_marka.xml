<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/marka_name"
        style="@style/st_16_text_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_12"
        android:layout_toLeftOf="@+id/view_model"
        android:layout_marginLeft="@dimen/pad_8"
        android:layout_toRightOf="@+id/chack_l" />

    <TextView
        android:id="@+id/count"
        style="@style/st_14_text_blue_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marka_name"
        android:layout_marginLeft="@dimen/pad_8"
        android:layout_toRightOf="@+id/chack_l"
        android:layout_marginTop="@dimen/pad_4"
        android:layout_marginBottom="@dimen/pad_12"/>

    <fitness.sistem.compon.custom_components.TextViewGrammar
        android:id="@+id/count_g"
        style="@style/st_14_text_blue_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marka_name"
        android:layout_marginBottom="@dimen/pad_12"
        android:layout_marginLeft="@dimen/pad_6"
        android:layout_marginTop="@dimen/pad_4"
        android:layout_toLeftOf="@+id/view_model"
        android:layout_toRightOf="@+id/count"
        app:alias="count"
        app:stringArray="@array/prod_grammar" />

    <LinearLayout
        android:id="@+id/chack_l"
        android:layout_width="@dimen/pad_40"
        android:layout_height="@dimen/pad_40"
        android:layout_marginLeft="@dimen/pad_16"
        android:layout_centerVertical="true"
        android:gravity="center">
        <View
            android:id="@+id/chack"
            android:layout_width="@dimen/pad_24"
            android:layout_height="@dimen/pad_24"
            android:background="@drawable/check_passive" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_model"
        android:layout_width="@dimen/pad_40"
        android:layout_height="@dimen/pad_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/pad_12"
        android:layout_centerVertical="true"
        android:alpha="0.3"
        android:padding="@dimen/pad_8">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nar_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_1"
        android:layout_below="@+id/count"
        android:layout_marginLeft="@dimen/pad_24"
        android:layout_marginRight="@dimen/pad_24"
        android:background="@color/gray" />
</RelativeLayout>
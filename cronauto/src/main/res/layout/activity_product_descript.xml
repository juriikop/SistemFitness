<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tool_bar"
        android:background="@color/primary"
        android:elevation="@dimen/pad_6">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/h_tool_bar"
            android:layout_height="@dimen/h_tool_bar"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nar_light" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/st_20_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/pad_72"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/st_18_black"
                    android:lineSpacingExtra="9sp"
                    android:layout_marginRight="@dimen/pad_24"
                    android:layout_marginLeft="@dimen/pad_24"
                    android:layout_marginTop="@dimen/pad_22"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_310"
                    android:elevation="@dimen/pad_8"
                    android:layout_marginTop="@dimen/pad_24"
                    android:layout_marginLeft="@dimen/pad_8"
                    android:layout_marginRight="@dimen/pad_8">
                    <ImageView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="@dimen/pad_52"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/bonus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/pad_18"
                            android:src="@drawable/bonys"/>

                        <ImageView
                            android:id="@+id/present"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/pad_4"
                            android:src="@drawable/present" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_36"
                    android:layout_marginTop="@dimen/pad_20"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/pad_24"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/st_12_black_50"
                            android:text="@string/code"/>

                        <TextView
                            android:id="@+id/product_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/st_12_black_50"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/pad_1"
                        android:layout_height="match_parent"
                        android:background="@color/black_30"
                        android:layout_marginLeft="@dimen/pad_20"
                        android:layout_marginRight="@dimen/pad_12"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/st_12_black_50"
                            android:text="@string/oem"/>
                        <TextView
                            android:id="@+id/oem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/st_12_black_50"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/pad_1"
                        android:layout_height="match_parent"
                        android:background="@color/black_30"
                        android:layout_marginLeft="@dimen/pad_20"
                        android:layout_marginRight="@dimen/pad_12"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/st_12_black_50"
                            android:text="@string/catalog_code"/>
                        <TextView
                            android:id="@+id/catalog_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/st_12_black_50"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_16"
                    android:layout_marginTop="@dimen/pad_16"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/st_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price" />

                    <fitness.sistem.compon.custom_components.SimpleTextView
                        android:id="@+id/price"
                        style="@style/st_16_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/pad_16"
                        android:textStyle="bold"
                        app:numberFormat="#0.00"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/pad_8"
                android:paddingLeft="@dimen/pad_8"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
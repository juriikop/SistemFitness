<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pad_70"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/d_icon_azs"
        android:layout_height="@dimen/d_icon_azs"
        android:layout_marginLeft="@dimen/pad_14"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/name"
        style="@style/st_16_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad_70"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_1"
        android:layout_alignParentBottom="true"
        android:background="@color/black_10" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgClub"
        android:layout_width="@dimen/w_img_midle"
        android:layout_height="@dimen/h_img_midle"
        android:layout_margin="@dimen/pad_block"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        style="@style/st_16_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_block"
        android:layout_marginRight="@dimen/pad_block"
        android:layout_toRightOf="@+id/imgClub"/>

    <TextView
        android:id="@+id/city"
        style="@style/st_14_black_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/pad_block"
        android:layout_marginRight="@dimen/pad_block"
        android:layout_toRightOf="@+id/imgClub"/>

    <LinearLayout
        android:layout_width="@dimen/pad_24"
        android:layout_height="@dimen/pad_16"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/pad_5"
        android:layout_marginRight="@dimen/pad_5"
        android:background="@color/primary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_1"
        android:layout_below="@+id/imgClub"
        android:background="@color/black_15"/>

</RelativeLayout>
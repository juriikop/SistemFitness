<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgClub"
        android:layout_width="@dimen/w_img_midle"
        android:layout_height="@dimen/h_img_midle"
        android:layout_margin="@dimen/pad_block"/>

    <TextView
        android:id="@+id/title"
        style="@style/st_16_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_block"
        android:layout_marginRight="@dimen/pad_block"
        android:layout_toRightOf="@+id/imgClub"/>

    <TextView
        android:id="@+id/city"
        style="@style/st_14_black_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/pad_block"
        android:layout_marginRight="@dimen/pad_block"
        android:layout_toRightOf="@+id/imgClub"/>

</RelativeLayout>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BaseEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black_20</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primaryDark</item>
    </style>

    <style name="st_12_black_50">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="st_14_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_14_black_50">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="st_14_black_70">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="st_16_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_16_black_50">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="st_20_black">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_24_black">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_cont_paragraph">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_cont_header" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="st_cont_title" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="st_cont_subtitle" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="st_cont_descr">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/black_70</item>
        <item name="android:itemBackground">@color/white</item>
    </style>
</resources>
